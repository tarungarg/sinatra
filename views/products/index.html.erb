<script src="/javascripts/products.js"></script>
<div id="server-cart-errors"></div>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Status</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.price %></td>
      <td><%= product.status %></td>
      <td><%= product.description %></td>
      <td><a href="/edit_product/<%=product.id%>">Edit</a></td>
      <td><a href="javascript:void(0);" class="add_to_cart" data-attr=<%=product.id%>>Add To Cart</a></td>
    </tr>
  <% end %>
</table>

